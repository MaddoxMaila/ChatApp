<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/left_message_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/left_message_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/left_message_pic"
        android:background="@drawable/message_bubble"
        android:gravity="top|fill"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        >

        <TextView
            android:id="@+id/left_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_message_linear"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:maxWidth="220dp"
            android:text="TextView"
            android:textSize="15sp"
            tools:padding="6dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/left_date_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_message_linear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textSize="11sp" />


</RelativeLayout>